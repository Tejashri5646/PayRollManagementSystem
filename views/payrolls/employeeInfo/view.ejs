<% layout('./layouts/boilerplate') %>
<body>
    <div class="grad-master">
        
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="profile-tab">
                <div class="grad-table">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="table-header">
                                <th scope="col">Employee Code</th>
                                <th scope="col">Employee Name</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(const { eCode, eName } of employeeInfo) { %>
                                <tr>
                                    <td><%= eCode %></td>
                                    <td><%= eName %></td>
                                    <td>
                                        <form method="post" action="http://localhost:8080/Home/employeeInfo/<%= eCode %>?_method=DELETE">
                                            <button class="btn">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
