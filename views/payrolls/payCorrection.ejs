<% layout('./layouts/boilerplate') %>
<body>
    <div class="home">
        <nav>
            <h6>Pay Correction</h6>
        </nav>
    </div>
    <div class="search-tabs">
        <div class="pay-container pay-month">
            <label for="code" class="form-label">Pay of Month: &nbsp;</label>
            <input type="text" id="code" name="username" required> &nbsp;
            <button type="button" class="search-btn btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg></button>
        </div>

        
        <div class="pay-container emp-dropdown">
            <label for="name" class="form-label">Pay Type: &nbsp;</label>
            <div class="dropdown">
                <select name="" id="" class="type-dropdown">
                
                    
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <option value="permanent" class="active">Permanent</option>
                    <option value="temporary">Temporary</option>
                </div>
                </select>

            </div>
            
        </div>
        <div class=" pay-container empCode">
            <label for="name" class="form-label">Employee Code: &nbsp;</label>
            <input type="text" id="name" name="name" required>&nbsp;
            <button type="button" class="search-btn btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg></button>
        </div>
        <div class=" pay-container branch">
            <label for="name" class="form-label">Branch Code: &nbsp;</label>
            <input type="text" id="name" name="name"  required>&nbsp;
            <button type="button" class="search-btn btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg></button>
        </div>
        <div class=" pay-container gradeCode">
            <label for="name" class="form-label">Grade Code: &nbsp;</label>
            <input type="text" id="name" name="name" required>&nbsp;
            <button type="button" class="search-btn btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg></button>
        </div>
        <div class=" pay-container pay-date">
            <label for="name" class="form-label">Pay Date: &nbsp;</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class=" pay-container basic-pay">
            <div class="basicP">
                <label for="name" class="form-label">Basic: &nbsp;</label>
            <input type="text" id="name" name="name" required>
            </div>
            <div class="da">
                <label for="name" class="form-label">D.A. : &nbsp;</label>
            <input type="text" id="name" name="name"  required>
            </div>
        </div>
        <div class="pay-container selectA">
            <label class="form-label" for="exampleRadios1">
                Select
              </label>&nbsp;&nbsp;&nbsp;
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                <label class="form-check-label" for="exampleRadios1">
                  Allowance
                </label>
              </div>&nbsp;
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  Deduction
                </label>
              </div>
        </div>
        <div class=" pay-container amount">
            <label for="name" class="form-label">Total Amount: &nbsp;</label>
            <input type="text" id="name" name="name"  required>
        </div>

        <div class="btn-grps-info">
            <div class="btn-grp-open">
                <button class="btn btn-sm">Save</button>
            </div>
            <div class="btn-grp-open">
                <button class="btn btn-sm">Cancel</button>
            </div>
            <div class="btn-grp-open">
                <button class="btn btn-sm" >Exit</button>
            </div>
            </div>
        
    </div>
</body>